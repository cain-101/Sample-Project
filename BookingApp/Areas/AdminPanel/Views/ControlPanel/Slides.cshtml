        <button type="button" class="btn btn-success pull-right pl-2 pr-2" data-toggle="modal" data-target="#IndexSlides">
            <i class="fas fa-plus-circle fa-lg"></i> Add index slides
        </button>
        <div class="card p-2">
            <h2 class="p-2">Index slide shows and captions</h2>
            <fieldset class="scheduler-border">
                <legend class="scheduler-border text-dark">Index image slides</legend>
                <div class="row" id="issImgDisplay">
                    @* dynamic ISS display here *@
                </div>
            </fieldset>
            <div class="row" id="captionDisplay">
                <div class="col-12">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border text-dark">Index content title</legend>
                        <p class="text-left shadow-effect" id="ContentTitle">

                        </p>
                    </fieldset>
                </div>
                <div class='col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6'>
