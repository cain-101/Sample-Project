<!-- Modal Package Image -->
<div class="modal fade" id="IndexSlides">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="fas fa-window-close"></i></button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <h4 class="my-font-18 text-center font-red p-2" style="opacity:0.8">Add Index Slide Show</h4>
                <hr class="my-border mt-0" />
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-8 col-lg-8 col-xl-8">
                        <span class="btn btn-outline-success btn-file">
                            <span class="fileinput-new">Select slide show images</span>
                            <input type="file" id="files" name="files" multiple />
                        </span>
                        <span class="text-danger my-font-13 imgerror"></span>
                    </div>

                    <div class="col-12 overflow-auto">
                        <div class="card shadow-effect p-2" id="slidePreview">
                            <h4 class="my-font-18 text-center font-red p-2 mt-1" style="opacity:0.8">Slide Preview</h4>
                            <hr class="my-border mt-0" />
                            <div class="row overflow-auto" id="multiimg"></div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button class="btn btn-success" type="submit" id="btnIndexSlide">Save Slides</button>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
            </div>

        </div>
    </div>
</div>


<!-- Edit index slides -->
<div class="modal fade" id="ImgIss">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Slide updating</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row" name="updateImgDiv">
                        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                            <span id="imgId">

                            </span>
                            <span class="btn btn-outline-success btn-file">
                                <span class="fileinput-new">Select slide show images</span>
                                <input type="file" id="ufiles" name="ufiles" />
                            </span>
                            <span class="text-danger my-font-13 imgerror"></span>
                        </div>
                        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6" id="imgPreview">

                        </div>
                        <div class="col-12">
                            <button id="updateISS" class="btn btn-success pull-right">Update</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<!-- Add index Captions -->
<div class="modal fade" id="IndexCaptions">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Captions</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method="post">
                    <div class="row" name="captionsEntity">
                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" name="fhCap" class="form-control" placeholder="First slide bolded (or header) caption" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control" name="fbCap" placeholder="First slide caption" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" class="form-control" name="shCap" placeholder="Second slide bolded (or header) caption" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control" name="sbCap" placeholder="Second slide caption" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control" name="IndexT" placeholder="Index Title" type="text" />
                            </div>
                        </div>
                        <div class="col-12">
                            <button id="btnSaveCaptions" class="btn btn-success pull-right">Save</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>